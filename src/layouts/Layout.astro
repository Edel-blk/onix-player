---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://vjs.zencdn.net/8.10.0/video-js.css" rel="stylesheet" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="text-white mx-auto min-h-screen max-w-6xl px-2 pt-16 pb-20 selection:bg-primary selection:text-secondary md:pt-20 lg:px-10" >
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Lato', sans-serif;
		background: #20252C;
	}

	h2 {
		color: #0099FF;
	}

	p {
		margin: 15px 0px 15px 0px;
		font-size: 18px;
	}

	section {
		margin-top: 50px;
	}
</style>
